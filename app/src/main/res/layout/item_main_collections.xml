<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/collectionsCard"
        android:layout_width="@dimen/dp140"
        android:layout_height="@dimen/dp140"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/dp20"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPurple">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCollections"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"
                android:layout_marginTop="@dimen/dp13"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDescriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sp3"
                android:maxLines="2"
                android:paddingStart="@dimen/dp8"
                android:paddingEnd="@dimen/dp8"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCollections" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>